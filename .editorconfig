[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4

[{*.sht,*.html,*.shtm,*.shtml,*.ng,*.htm}]
indent_style=tab
tab_width=4

[{composer.lock,.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=tab
tab_width=4

[*.js]
indent_style=space
indent_size=2

[{*.module,*.engine,*.hphp,*.test,*.phtml,*.php5,*.php4,*.php,*.profile,*.theme,*.install,*.inc}]
indent_style=tab
tab_width=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

